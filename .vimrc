"set no autoindent"
set noautoindent

"1 tab = 4 spaces"
set tabstop=4

"enable search hightlight"
set hlsearch

"enable syntax highlighting"
syntax enable

"Display status bar"
set laststatus=2

"Show cursor position"
set ruler

"line count"
set number

"Use mouse for scrolling"
set mouse=a

"Sets title as the file name"
set title

"confirmation for usaved files"
set confirm

"Sets partial searches"
set incsearch

"Disable swap"
set noswapfile